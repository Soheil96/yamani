---
const { title } = Astro.props;
---
<link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/base.css`}>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>

    <div class="menu-container">
      <div class="menu-button">
          <div class="menu-line line1"></div>
          <div class="menu-line line2"></div>
          <div class="menu-line line3"></div>
      </div>
      <div class="menu-content">
          <a href=`${import.meta.env.BASE_URL}`>Biography</a>
          <a href=`${import.meta.env.BASE_URL}origin`>Origin and Lineage</a>
      </div>
    </div>

    <slot />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
          const menuContainer = document.querySelector('.menu-container');
          const menuButton = document.querySelector('.menu-button');

          menuButton?.addEventListener('click', () => {
              menuContainer?.classList.toggle('active');
              menuButton?.classList.toggle('active');
          });
      });
    </script>

  </body>
</html>
