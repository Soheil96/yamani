---
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
        body {
            margin: 0;
            background-color: #F0F0F0;
            font-family: Arial, sans-serif;
        }

        .menu-container {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .menu-button {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            width: 30px;
            height: 21.5px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .menu-button.active .line1 {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .menu-button.active .line2 {
            opacity: 0;
        }

        .menu-button.active .line3 {
            transform: rotate(-45deg) translate(5px, -5px);
        }

        .menu-line {
            width: 100%;
            height: 4px;
            background-color: black;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        .menu-content {
            display: none;
            position: absolute;
            top: 30px;
            right: -15px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            overflow: hidden;
            width: 160px;
        }

        .menu-container.active .menu-content {
            display: block;
        }

        .menu-content a {
            display: block;
            padding: 10px 10px;
            color: black;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .menu-content a:hover {
            background-color: #e0e0e0;
        }
    </style>
  </head>
  <body>

    <div class="menu-container">
      <div class="menu-button">
          <div class="menu-line line1"></div>
          <div class="menu-line line2"></div>
          <div class="menu-line line3"></div>
      </div>
      <div class="menu-content">
          <a href=`${import.meta.env.BASE_URL}`>Biography</a>
          <a href=`${import.meta.env.BASE_URL}origin`>Origin and Lineage</a>
      </div>
    </div>

    <slot />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
          const menuContainer = document.querySelector('.menu-container');
          const menuButton = document.querySelector('.menu-button');

          menuButton?.addEventListener('click', () => {
              menuContainer?.classList.toggle('active');
              menuButton?.classList.toggle('active');
          });
      });
    </script>

  </body>
</html>
